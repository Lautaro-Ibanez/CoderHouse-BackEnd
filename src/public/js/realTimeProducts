const socket = io();

const getProducts = document.getElementById("getProducts");
const cleanProducts = document.getElementById("cleanProducts");
const infoBox = document.getElementById("info-box");

socket.on("getProducts", (data) => {
  console.log(data);
  getProducts.addEventListener("click", () => {
    let messageProduct = "";
    data.forEach((elem) => {
      messageProduct += `Producto: ${elem.id}, Title: ${elem.title}, Price: ${elem.price} <br/>`;
    });
    infoBox.innerHTML = messageProduct;
  });
});

cleanProducts.addEventListener("click", ()=>{
    infoBox.innerHTML = "";
})